<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="students.css">
</head>
<body>
    <div class="bg-shape shape1"></div>
    <div class="bg-shape shape2"></div>
    <div class="bg-shape shape3"></div>

    <div class="container">
        <div class="header">
            <div class="header-icon">ğŸ“</div>
            <h1>Student Management System</h1>
        </div>

        <div class="actions-bar">
            <a href="/add_student" class="add-student-btn">â• Add New Student</a>
            
            <div class="search-section">
                <h3>ğŸ” Search Student</h3>
                
                <%let msg = "";
                if(err_search_stu_roll_no == 1){
                    msg = "Student data not found. Please enter correct roll number.";
                    err_search_stu_roll_no = 0;
                }%>

                <% if(msg) { %>
                    <div class="error-message">âš ï¸ <%=msg%></div>
                <% } %>

                <form action="/student" method="post" class="search-form">
                    <input type="number" name="roll_no" placeholder="Enter student roll number" required>
                    <button type="submit" class="search-btn">Search</button>
                </form>
            </div>
        </div>

        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>ğŸ“‹ Roll No</th>
                        <th>ğŸ‘¤ Name</th>
                        <th>ğŸ“š Course</th>
                        <th>âœï¸ Edit</th>
                        <th>ğŸ—‘ï¸ Delete</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    <% if(students.length === 0) { %>
                        <tr>
                            <td colspan="5">
                                <div class="empty-state">
                                    <div class="empty-state-icon">ğŸ“­</div>
                                    <h3>No students found</h3>
                                    <p>Start by adding your first student!</p>
                                </div>
                            </td>
                        </tr>
                    <% } else { %>
                        <%for(let i = 0; i < students.length; i++){%>
                            <%const {roll_no,name,course} = students[i];%>
                            <tr class="data-row">
                                <td><strong><%=roll_no%></strong></td>
                                <td><%=name%></td>
                                <td><%=course%></td>
                                <td><button class="edit-btn" student-roll-no="<%=roll_no%>">Edit</button></td>  
                                <td><button class="delete-btn" student-roll-no="<%=roll_no%>">Delete</button></td> 
                            </tr>
                        <%}%>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tableBody = document.getElementById('tableBody');
            
            // Event delegation for Edit and Delete buttons
            tableBody.addEventListener('click', function(event) {
                const target = event.target;
                
                // Handle Edit button click
                if (target.classList.contains('edit-btn')) {
                    event.stopPropagation();
                    const rollNo = target.getAttribute('student-roll-no');
                    window.location.href = `/edit-student?id=${rollNo}`;
                }
                
                // Handle Delete button click
                if (target.classList.contains('delete-btn')) {
                    event.stopPropagation();
                    const rollNo = target.getAttribute('student-roll-no');
                    
                    if (confirm('âš ï¸ Are you sure you want to delete this student? This action cannot be undone.')) {
                        window.location.href = `/delete-student?id=${rollNo}`;
                    }
                }
            });
        });
    </script>
</body>
</html>